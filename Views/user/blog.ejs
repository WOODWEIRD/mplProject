<%- include('../partials/header')%>
    <div class="container m-1 text-left">
        <h3 class="display-4">Create A Blog</h1>
            <div class="row border-bottom p-2">
                <form action="/user/createPost" method="post" class="col-md-6">
                    <div class="form-group">
                        <label for="title">Title</label>
                        <input type="text" class="form-control" required placeholder="Enter post title" id="title"
                            name="title">
                    </div>
                    <div class="form-group">
                        <label for="tags">Tags</label>
                        <input type="text" class="form-control" required
                            placeholder="Enter comma seperated tags ex. cars, fast, speed" id="tags" name="tags">
                    </div>
                    <div class="form-group mb-0">
                        <textarea class="form-group mb-0" id="content" name="content" required
                            placeholder="What's on your mind <%= firstName %>?" rows="4" cols="60"></textarea>
                    </div>
                    <button type="submit" class="btn btn-sm btn-primary mb-3">Blog</button>
                </form>
            </div>
    </div>
    <div class="container m-1 ml-4 text-left">
        <div class="row">
            <h3 class="display-4">Recent Posts</h3>
            <% for(post of sortedPosts){%>
                <div class="card mb-1" style="width: 100%;">
                    <div class="card-body">
                        <h4 class="card-title m-0 p-0">
                            <%= post.title%>
                                <% if(!user.likedPosts.includes(post._id.toString())){ %>
                                    <a href="/user/like/<%= post._id%>/blog"
                                        class="border rounded border-success mx-3"><svg
                                            xmlns="http://www.w3.org/2000/svg" width="16" height="16"
                                            fill="currentColor" class="bi bi-hand-thumbs-up-fill" viewBox="0 0 16 16">
                                            <path
                                                d="M6.956 1.745C7.021.81 7.908.087 8.864.325l.261.066c.463.116.874.456 1.012.965.22.816.533 2.511.062 4.51a10 10 0 0 1 .443-.051c.713-.065 1.669-.072 2.516.21.518.173.994.681 1.2 1.273.184.532.16 1.162-.234 1.733q.086.18.138.363c.077.27.113.567.113.856s-.036.586-.113.856c-.039.135-.09.273-.16.404.169.387.107.819-.003 1.148a3.2 3.2 0 0 1-.488.901c.054.152.076.312.076.465 0 .305-.089.625-.253.912C13.1 15.522 12.437 16 11.5 16H8c-.605 0-1.07-.081-1.466-.218a4.8 4.8 0 0 1-.97-.484l-.048-.03c-.504-.307-.999-.609-2.068-.722C2.682 14.464 2 13.846 2 13V9c0-.85.685-1.432 1.357-1.615.849-.232 1.574-.787 2.132-1.41.56-.627.914-1.28 1.039-1.639.199-.575.356-1.539.428-2.59z" />
                                        </svg></a>
                                    <%} %>
                                        <% if(user.likedPosts.includes(post._id.toString())){ %>
                                            <a href="/user/removeLike/<%= post._id%>/blog"
                                                class="border rounded border-danger  mx-3"><svg
                                                    xmlns="http://www.w3.org/2000/svg" width="16" height="16"
                                                    fill="currentColor" class="bi bi-hand-thumbs-down-fill"
                                                    viewBox="0 0 16 16">
                                                    <path
                                                        d="M6.956 14.534c.065.936.952 1.659 1.908 1.42l.261-.065a1.38 1.38 0 0 0 1.012-.965c.22-.816.533-2.512.062-4.51q.205.03.443.051c.713.065 1.669.071 2.516-.211.518-.173.994-.68 1.2-1.272a1.9 1.9 0 0 0-.234-1.734c.058-.118.103-.242.138-.362.077-.27.113-.568.113-.856 0-.29-.036-.586-.113-.857a2 2 0 0 0-.16-.403c.169-.387.107-.82-.003-1.149a3.2 3.2 0 0 0-.488-.9c.054-.153.076-.313.076-.465a1.86 1.86 0 0 0-.253-.912C13.1.757 12.437.28 11.5.28H8c-.605 0-1.07.08-1.466.217a4.8 4.8 0 0 0-.97.485l-.048.029c-.504.308-.999.61-2.068.723C2.682 1.815 2 2.434 2 3.279v4c0 .851.685 1.433 1.357 1.616.849.232 1.574.787 2.132 1.41.56.626.914 1.28 1.039 1.638.199.575.356 1.54.428 2.591" />
                                                </svg></a>
                                            <%} %>
                        </h4>
                        <p class="card-text m-0 p-0">
                            <a href="/user/blogger/<%= post.userName%>">@<%= post.userName%></a>
                        </p>

                        <p class="card-subtitle m-0 p-0 text-muted">
                            tags: <%= post.tags%>
                        </p>
                        <p class="m-0 p-0 mb-2">likes: <%= post.likes%>
                        </p>
                        <hr>
                        <% if (post.author.toString()==user._id.toString() || user.roles.includes("admin")){%>
                            <a href="/user/deletePost/<%= post._id%>/blog" class="btn btn-danger btn-sm">Delete
                                Post</a>
                            <%} %>
                                <p class="card-text">
                                    <%= post.content%>
                                </p>
                                <h5 class="m-0 p-0">Comment Section:</h5>
                                <ul class="list-group list-group-flush">
                                    <% for(comment of post.comments){%>
                                        <li class="list-group-item border px-3 py-1 my-1">
                                            <p class="m-0 p-0">
                                                <a href="/user/blogger/<%= comment.author%>">@<%= comment.author%>
                                                </a>:
                                            </p>
                                            <% if (comment.user.toString()==user._id.toString() ||
                                                user.roles.includes("admin")){%>
                                                <a href="/user/deleteComment/<%= post._id%>/<%= comment._id%>/blog"
                                                    class="btn btn-danger btn-sm">Delete Comment</a>
                                                <%} %>
                                                    <p class="m-0 p-0">
                                                        <%= comment.comment%>
                                                    </p>
                                        </li>
                                        <%}%>
                                </ul>
                                <form action="/user/addComment/<%= post._id%>/blog" method="post"
                                    class="border border-rounded p-2">
                                    <div class="form-group">
                                        <input type="text" class="form-control" required placeholder="Enter comment"
                                            id="comment" name="comment">
                                    </div>
                                    <button type="submit" class="btn btn-sm btn-primary">Add
                                        Comment</button>
                                </form>
                    </div>
                </div>
                <%}%>
        </div>
    </div>
    <%- include('../partials/footer')%>